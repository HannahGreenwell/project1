<h2><%= @product.brand %></h2>

<% @product.images.each do |image| %>
  <%= image_tag image.image, alt: @product.name %>
<% end %>

<h4><%= @product.name %></h4>

<p><%= @product.description %></p>

<p><%= number_to_currency(@product.price) %></p>

<%= button_to 'Add to Basket', line_items_path(product_id: @product) %>
