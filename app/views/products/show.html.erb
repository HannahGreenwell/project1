<h2><%= @product.brand %></h2>

<div class="grid-container">
  <div class="grid-item">
    <% @product.images.each do |image| %>
      <%= image_tag image.image, alt: @product.name %>
    <% end %>
  </div><!-- grid-item -->

  <div class="grid-item">
    <h3><%= @product.name %></h3>

    <p class="description"><%= @product.description %></p>

    <p class="price"><%= number_to_currency(@product.price) %> AUD</p>


    <%= form_tag line_items_path  do %>
      <%= select_tag :product_size_id,
        options_for_select(
          @product.product_sizes.order(:size).pluck :size, :id
        ) %>

      <%= submit_tag 'Add to Cart' %>
    <% end %>
  </div><!-- grid-item -->
</div><!-- grid-container -->
