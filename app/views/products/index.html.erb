<h2><%= Date.today.strftime("%B %Y") %></h2>

<div class="grid-container">

  <% @products.each do |product| %>
    <div class="grid-item">
      <a href="<%= product_path(product) %>">
        <%= image_tag product.images.first.image %>
      </a>
    </div>
  <% end %>

  <div class="grid-item last-cell">
    <p>EIGHT BY EIGHT</p>
  </div>

</div>
