<h2>Sign In</h2>

<% if flash[:login_error].present? %>
  <p class="error"><span><%= flash[:login_error] %></span></p>
<% end %>

<%= form_tag login_path do %>
  <fieldset>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil %>
  </fieldset>
  <fieldset>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>
  </fieldset>

  <%= submit_tag 'Login' %>
<% end %>
